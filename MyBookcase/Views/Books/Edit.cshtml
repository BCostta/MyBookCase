@model MyBookcase.Models.Entities.Book

<h1>Edit Student</h1>

@if (Model is null)
{
    <p>No book was found with this Id</p>
}
else
{
    <form method="post">
        <div class="mt-3">
            <label class="form-label">Id</label>
            <input type="text" class="form-control" asp-for="Id" readonly />
        </div>
        <div class="mt-3">
            <label class="form-label">Titulo</label>
            <input type="text" class="form-control" asp-for="Title" />
        </div>

        <div class="mt-3">
            <label class="form-label">Autor</label>
            <input type="text" class="form-control" asp-for="Author" />
        </div>

        <div class="mt-3">
            <label class="form-label">Ano de publicação</label>
            <input type="text" class="form-control" asp-for="yearsOfPublication" />
        </div>

        <div class="mt-3">
            <label class="form-label">Descrição</label>
            <input type="text" class="form-control" asp-for="Description" />
        </div>

        <div class="mt-3">
            <label class="form-label">Ano de publicação</label>
            <input type="text" class="form-control" asp-for="yearsOfPublication" />
        </div>

        <div class="mt-3">
            <label class="form-label">Categoria</label>
            <input type="text" class="form-control" asp-for="categoryId" />
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>

            <button type="submit" class="btn btn-danger" asp-action="Delete" asp-controller="Books">Delete</button>
        </div>
    </form>
}