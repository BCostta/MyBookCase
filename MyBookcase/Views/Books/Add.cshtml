@model MyBookcase.Models.Entities.Book

<h1>Adicionar Livros</h1>

<form method="post">

    <div class="mt-3">
        <label class="form-label">Titulo</label>
        <input type="text" class="form-control" asp-for="Title" />
    </div>

    <div class="mt-3">
        <label class="form-label">Autor</label>
        <input type="text" class="form-control" asp-for="Author" />
    </div>

    <div class="mt-3">
        <label class="form-label">Ano de publicação</label>
        <input type="text" class="form-control" asp-for="yearsOfPublication" />
    </div>

    <div class="mt-3">
        <label class="form-label">Descrição</label>
        <input type="text" class="form-control" asp-for="Description" />
    </div>

    <div class="mt-3">
        <label class="form-label">Categoria</label>
        <input type="text" class="form-control" asp-for="categoryId" />
    </div>

    <div class="mt-3">
        <label class="form-label">Quantidade em estoque</label>
        <input type="text" class="form-control" asp-for="quantityInStock" />
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Adicionar</button>
    </div>

</form>