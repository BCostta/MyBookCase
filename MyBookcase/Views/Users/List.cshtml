@{
}

@model List<MyBookcase.Models.Entities.User>

    <h1>Usuários</h1>
    <table class="table">
        <thead>
            <tr>
            <th>Name</th>
            <th>Email</th>
            <th>TypeUser</th>
            <th>dataRegister</th>
            </tr>
        </thead>
        <tbody>
        @foreach(var users in Model)
        {
            <tr>
                <td>@users.Name</td>
                <td>@users.Email</td>
                @if(users.typeUser == 1)
                {
                    <td>Administrador</td>
                }
                else
                {
                    <td>Participante</td>
                }
                <td>@users.dataRegister</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Users" asp-action="Edit" asp-route-id="@users.Id">Edit</a>
                </td>
            </tr>
        }
        </tbody>
    </table>