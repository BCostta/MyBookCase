@{
}

@model MyBookcase.Models.Entities.User

<h1>Editar usuário</h1>

<form method="post">
    <input type="hidden" asp-for="Id" />
    <div class="mt-3">
        <label class="form-label">Nome</label>
        <input type="text" class="form-control" asp-for="Name" />
    </div>
    <div class="mt-3">
        <label class="form-label">Email</label>
        <input type="text" class="form-control" asp-for="Email" />
    </div>

    <div class="mt-3">
        <label class="form-label">Senha</label>
        <input type="text" class="form-control" asp-for="Password" />
    </div>

    <div class="mt-3">
        <label class="form-label">Tipo de usuário</label>
        <input type="text" class="form-control" asp-for="typeUser" />
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Salvar</button>

        <button type="submit" class="btn btn-danger" asp-action="Delete" asp-controller="Users">Delete</button>
    </div>
</form>